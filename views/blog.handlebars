{{#each blogs as |blog| }}
<section id="techBlogMainContainer">
    <div class="blog-header-row">
        <div class="blog-button-row">
            {{#if blog.is_owner}}
            <button class="edit-blog-button">Edit</button>
            <button class="delete-blog-button" data-id="{{blog.id}}">Delete</button>
            {{/if}}
        </div>
        <h2 class="blog-title">{{blog.title}}</h2>
    </div>
    <div class="blog-content">
        <div class="blog-post-text">
            {{!-- <p placeholder="test">{{blog.blog_text}}</p> --}}
            <h3 class="blog-user blog-user{{blog.id}}">{{user.username}}</p>
            </h3><br>
            <p>
                Date Created: {{format_date date_created}}
            </p>
        </div>
    </div>
</section>

<div id="blog-comments-container">
    <div class="comment-header-row row">
        <button class="addCommentBtn" data-id="{{blog.id}}">✚</button>
        <h3>Comments</h3>
    </div>
    {{#if comments.length}}
    {{#each comments as |comment| }}
    <div class="comment-row row">
    <p>• {{user.username}}: {{comment.comment_text}} - {{format_date date_created}}</p>
    <button class="delete-comment-button" data-id="{{comment_id}}">✕</button>
    </div>
    {{else}}
    {{/each}}
    {{/if}}
</div>
{{/each}}

<div id="add-comment-tile">
    <div class="add-comment-container">
        <div class="close-comment-popup">✕</div>
        <p>Speak Your Opinion</p>
        <div class="signup-column">
            <textarea type="text" class="new-comment-textfield" 
            maxlength="240" placeholder="enter a comment here" /></textarea>
            <button class="commentSubmitBtn">Post Comment</button>
        </div>
    </div>
</div>


<script src="./js/blog-display.js"></script>
<script src="./js/blog-delete.js"></script>
